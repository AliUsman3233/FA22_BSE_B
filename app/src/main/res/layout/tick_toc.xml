<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/center"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="#2196F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/center_left"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="#FF3C00"
        app:layout_constraintEnd_toStartOf="@+id/center"
        app:layout_constraintTop_toTopOf="@+id/center"
        />

    <View
        android:id="@+id/center_right"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="#000000"
        app:layout_constraintStart_toEndOf="@+id/center"
        app:layout_constraintBottom_toBottomOf="@id/center"
        />

    <View
        android:id="@+id/bottom_center"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="#329D90"
        app:layout_constraintTop_toBottomOf="@id/center"
        app:layout_constraintStart_toStartOf="@id/center"
        />

    <View
        android:id="@+id/top_center"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/center"
        app:layout_constraintStart_toStartOf="@id/center"
        />

    <View
        android:id="@+id/bottom_left"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="#FFC107"
        app:layout_constraintBottom_toBottomOf="@id/bottom_center"
        app:layout_constraintEnd_toEndOf="@id/center_left"
        />

    <View
        android:id="@+id/bottom_right"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="#00FF12"
        app:layout_constraintBottom_toBottomOf="@id/bottom_center"
        app:layout_constraintEnd_toEndOf="@id/center_right"
        />

    <View
        android:id="@+id/top_right"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="#F465E1"
       app:layout_constraintLeft_toRightOf="@id/top_center"
        app:layout_constraintBottom_toBottomOf="@id/top_center"
        />
    <View
        android:id="@+id/top_left"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="#3F51B5"
        app:layout_constraintRight_toLeftOf="@id/top_center"
        app:layout_constraintBottom_toTopOf="@id/center_left"
        />
</androidx.constraintlayout.widget.ConstraintLayout>